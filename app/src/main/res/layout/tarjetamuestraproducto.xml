<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="4dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="318dp"
                android:layout_height="match_parent"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/idproductoproducto"
                    android:layout_width="3dp"
                    android:layout_height="2dp"
                    android:inputType="textNoSuggestions"


                    />

                <TextView
                    android:id="@+id/inventarioproducto"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_alignStart="@+id/imagenproductos"
                    android:layout_alignEnd="@+id/imagenproductos"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="81dp"
                    android:background="@drawable/circulofondo"
                    android:hint="n"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nombreproductoproducto"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/imagenproductos"
                    android:hint="ItemName"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/precioproducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/imagenproductos"
                    android:hint="Price"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/ingredientesproductos"
                    android:layout_width="178dp"
                    android:layout_height="54dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="55dp"
                    android:layout_toEndOf="@+id/imagenproductos"
                    android:text="TextView" />

                <ImageView
                    android:id="@+id/imagenproductos"
                    android:layout_width="97dp"
                    android:layout_height="91dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="22dp"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/eliminar"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/eliminarb"
                    android:elevation="1dp"
                    android:paddingLeft="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <Button
                    android:id="@+id/editat"
                    android:layout_width="57dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center_horizontal|left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/editarb" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>